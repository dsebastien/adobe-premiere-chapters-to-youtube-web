{
  "name": "adobe-premiere-chapters-to-youtube-gui",
  "version": "0.0.1",
  "description": "Web application to convert Adobe Premiere Pro chapter markers to YouTube chapter format",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "build": "tsc && tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify && vite build",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,css}\" \"*.{ts,js,json,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,css}\" \"*.{ts,js,json,html}\"",
    "type-check": "tsc --noEmit",
    "tsc:watch": "tsc --noEmit --watch",
    "lint": "tsc --noEmit && prettier --check ."
  },
  "keywords": [
    "adobe-premiere",
    "youtube",
    "chapters",
    "video-editing",
    "markers"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  }
}
